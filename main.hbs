<div class = "d-flex justify-content-center">
    <form class = "d-flex justify-content-center" action="/newpost" method="POST">
<div class = "mt-3"><
    <input name="textPost" placeholder="Текст" type="text" class="form-control">
</div>
<button type="submit" class= "btn btn-primary">Добавить пост</button>
    </form>
</div>
<hr />

<section class="d-flex justify-content-center">
{{#each listOfPosts}}
<div class = "card mx-2" style="width: 20 rem;">
    <img src="{{this.imgs}}" class="card-img-top" alt="">
    <div class="card-body">
<p class = "card-text">{{this.textPost}}</p>
    </div>
     </div>
     {{/each}}
</section>